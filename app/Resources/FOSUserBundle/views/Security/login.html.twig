{% extends '@FOSUser/layout.html.twig' %}
{% block pageTitle %}{{ 'Είσοδος' | trans }}{% endblock %}
{% block fos_user_content %}

    {% block container %}

        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info" >
                <div class="panel-heading">
                    <div class="panel-title">{{ 'Είσοδος' | trans }}</div>
                    <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">{{ 'Ξεχάσατε τον κωδικό σας?' | trans }}</a></div>
                </div>

                <div style="padding-top:30px" class="panel-body" >

                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                    <form id="loginform" action="{{ path('fos_user_security_check') }}" method="post" class="form-horizontal" role="form">

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <input id="login-username" type="text" class="form-control" name="_username" value="" placeholder="{{ 'username ή email' | trans  }}">
                        </div>

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            <input id="login-password" type="password" class="form-control" name="_password" placeholder="password">
                        </div>


                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">

                        <div class="input-group">
                            <div class="checkbox">
                                <label>
                                    <input id="login-remember" type="checkbox" name="_remember_me" value="on"> {{ 'Να με θυμάσαι' | trans }}
                                </label>
                            </div>
                        </div>


                        <div style="margin-top:10px" class="form-group">
                            <!-- Button -->

                            <div class="col-sm-12 controls">
                                <input type="submit" id="btn-login"  value="{{ 'Είσοδος' | trans }}" name="_submit"  class="btn btn-success" />
                                <a id="btn-fblogin" href="#" class="btn btn-primary">{{ 'Είσοδος με Egram' |trans }}</a>

                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-12 control">
                                <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >

                                    <a href={{ path('fos_user_registration_register') }} >
                                        {{ 'Εγγραφή' | trans }}
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>



                </div>
            </div>
        </div>
    {% endblock %}

{% endblock fos_user_content %}